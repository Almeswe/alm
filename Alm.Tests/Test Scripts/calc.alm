import extInput;


function calc() of integer
{
	string plus = "+";
	string div  = "/";
	string mult = "*";
	string sub  = "-";
	
	integer first  = toint(read("Введите число 1: "));
	integer second = toint(read("Введите число 2: "));
	string  action = read("Введите действие: ");

	if (action == plus)
	{
		println("Сумма :");
		print(tostr(first+second));
		return 0;
	}
	if (action == sub)
	{
		println("Разность :");
		print(tostr(first-second));
		return 0;
	}
	if (action == mult)
	{
		println("Произведение :");
		print(tostr(first*second));
		return 0;
	}
	if (action == div)
	{
		println("Целочисленное деление :");
		print(tostr(first/second));
		return 0;
	}

	println("Дейсвие : ");print(action);println(" неизвестно");	

	return 0;
}
